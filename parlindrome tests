'''parlindrome test: to test input is a parlindrome or not'''
def is_parlindrome(n):
    str_n = str(n)
    if str_n.isdecimal():
        pass
    else:
        print('input is not a decimal number, please restart and try again ')
        return
    list_n = list(str_n)
    list_n.reverse()
    num_n = map(str, list_n)
    num_n = ''.join(num_n)
    num_n = int(num_n)
    if num_n == n:
        print('%d is parlindrome'%num_n)
        return
    else:
        print('%d is not parlindrome'%num_n)
        return 
